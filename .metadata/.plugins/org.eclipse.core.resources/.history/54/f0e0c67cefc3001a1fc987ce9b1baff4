/* To show the grade obtained by a student after
   he/she enters their total mark percentage.*/
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int totalmark;
	char grade = "Per";
	setbuf(stdout,NULL);
	printf("To display grade");
	printf("\n----------------\n");
	printf("Enter the percentage of marks obtained: ");
	scanf("%d",&totalmark);
	if (totalmark < 50) {
		grade = 'Failed';
	}

	printf("Grade obtained: %c",grade);

	return EXIT_SUCCESS;
}
