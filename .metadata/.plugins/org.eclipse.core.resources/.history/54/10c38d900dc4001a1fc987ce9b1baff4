/* To find prime numbers for a given limit
   Prime numbers are numbers which are divisible by 1 and itself */
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num,i,j;
	setbuf(stdout,NULL);
	printf("Enter the limit for the prime numbers: ");
	scanf("%d",&num);
	for(i=2;i<=num;i++){
		for(j=1;j<=num,j++){
			if(i%j != 0 ){
				printf("%d\n",i);
			}
		}

	}

	return EXIT_SUCCESS;
}
