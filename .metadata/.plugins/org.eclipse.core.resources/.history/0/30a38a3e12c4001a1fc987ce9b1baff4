/* To find prime numbers for a given limit
   Prime numbers are numbers which are divisible by 1 and itself */
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num,i,count,j;
	setbuf(stdout,NULL);
	printf("Prime Numbers");
	printf("\n-------------\n");
	printf("Enter the limit: ");
	scanf("%d",&num);
	for(i=1;i<=num;i++){
		count=0;
		for(j=2;j<=i/2;j++){
			if(i%j == 0){
				count ++;
				break;
			}
		}
		if(count == 0 && i != 1){
			printf("%d\n",i);
		}
	}
	return EXIT_SUCCESS;
}
