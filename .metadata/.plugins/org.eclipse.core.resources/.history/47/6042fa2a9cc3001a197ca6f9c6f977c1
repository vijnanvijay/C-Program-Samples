#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int a;
	setbuf(stdout,NULL);
	printf("!!!Hello World!!!");/* prints !!!Hello World!!! */
	printf("\nEnter a Number: ");
	scanf("%d",&a);
	printf("a is asigned to: %d",a);
	return EXIT_SUCCESS;
}
