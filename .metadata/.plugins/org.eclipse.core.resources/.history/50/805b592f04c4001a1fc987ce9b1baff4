/* To print odd & even numbers upto the given range*/
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num,i;
	setbuf(stdout,NULL);
	printf("To display odd & even number in a given range");
	printf("\n---------------------------------------------\n");
	printf("Enter a number : ");
	scanf("%d",&num);
	printf("Odd numbers upto %d\n",num);
	for(i=1;i<=num;i=i+2){
		printf("%d\n",i);
	}


	return EXIT_SUCCESS;
}
