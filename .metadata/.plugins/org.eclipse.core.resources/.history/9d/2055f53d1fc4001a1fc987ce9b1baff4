/* To create an array & sum the values & find a value*/
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int limit, a[100],i;
	setbuf(stdout,NULL);
	printf("To create an Array / Sum the values / Find a value");
	printf("\n--------------------------------------------------n");
	printf("Enter the array limit : ");
	scanf("%d",&limit);
	printf("Enter the values one by one:\n");
	for(i=1;i<=limit;i++){
		printf("%d. ",i);
		scanf("%d",&a[i]);
	}

	return EXIT_SUCCESS;
}
