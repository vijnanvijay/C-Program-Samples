#include <stdio.h>
#include <stdlib.h>

/* To find sum of given to numbers */
int main(void) {
	int a;
	float b,c;
	setbuf(stdout,NULL);
	printf("To find sum of two numbers");
	printf("\n--------------------------\n");
	printf("Enter 1st Number  : ");
	scanf("%d",&a);
	printf("Enter 2nd Number  : ");
	scanf("%d",&b);
	c = a + b;
	printf("Sum of two Numbers: %d",c);

	return EXIT_SUCCESS;
}
